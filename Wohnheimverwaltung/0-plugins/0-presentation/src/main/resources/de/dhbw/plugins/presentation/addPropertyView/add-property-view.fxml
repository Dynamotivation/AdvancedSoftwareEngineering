<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="de.dhbw.plugins.presentation.addPropertyView.AddPropertyController">

    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Street Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="streetNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="House Number:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="houseNumberField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Postal Code:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Date of Construction:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <DatePicker fx:id="dateOfConstructionPicker" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Size (sqm):" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <Spinner fx:id="sizeSpinner" GridPane.columnIndex="1" GridPane.rowIndex="5"
                     min="0" max="1000" initialValue="100"/>

            <Label text="Max Tenants:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <Spinner fx:id="maxTenantsSpinner" GridPane.columnIndex="1" GridPane.rowIndex="6"
                     min="0" max="100" initialValue="1"/>

            <Button text="Create Rental Property" fx:id="createButton" disable="true" onAction="#handleCreateRentalProperty"
                    GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2"/>
        </GridPane>
    </center>
</BorderPane>
